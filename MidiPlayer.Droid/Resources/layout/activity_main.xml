<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_dark">
    <RelativeLayout
        android:id="@+id/relative_layout_upper"
        android:minWidth="2px"
        android:minHeight="20px"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light">
        <Button
            android:id="@+id/button_load_soundfont"
            android:text="sf"
            android:textSize="25px"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
        />
        <Button
            android:id="@+id/button_load_midifile"
            android:text="midi"
            android:textSize="25px"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button_load_soundfont"
        />
        <Button
            android:id="@+id/button_start"
            android:text="Start"
            android:textSize="20px"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button_load_midifile"
         />
        <Button
            android:id="@+id/button_stop"
            android:text="Stop"
            android:textSize="25px"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button_start"
         />
        <Button
            android:id="@+id/button_add_playlist"
            android:text="Add"
            android:textSize="25px"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button_stop"
         />
        <Button
            android:id="@+id/button_delete_playlist"
            android:text="Del"
            android:textSize="25px"
            android:textStyle="bold"                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button_add_playlist"
         />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_layout_lower"
        android:minWidth="25px"
        android:minHeight="25px"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_layout_upper"
        android:background="@android:color/darker_gray">
        <!-- fader1 -->
        <LinearLayout
            android:id="@+id/linear_layout_fader_1"
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:background="@android:color/holo_red_light">
            <TextView
                android:id="@+id/text_view_ch_1"
                android:text="1"
                android:textSize="24px"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:background="@android:color/holo_red_light"
            />
            <TextView
                android:id="@+id/text_view_prog_1"
                android:text="PRG"
                android:textSize="24px"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:background="@android:color/holo_orange_light"
            />
            <NumberPicker
                android:id="@+id/number_picker_prog_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="4dp"
                android:background="@android:color/holo_orange_light"
            />
            <TextView
                android:id="@+id/text_view_pan_1"
                android:text="PAN"
                android:textSize="24px"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:background="@android:color/holo_green_light"
            />
            <NumberPicker
                android:id="@+id/number_picker_pan_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="4dp"
                android:background="@android:color/holo_green_light"
            />
            <TextView
                android:id="@+id/text_view_vol_1"
                android:text="VOL"
                android:textSize="24px"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:background="@android:color/holo_blue_light"
            />
            <NumberPicker
                android:id="@+id/number_picker_vol_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="4dp"
                android:background="@android:color/holo_blue_light"
            />
            <Button
                android:id="@+id/button_mute_1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="M"
                android:textSize="24px"
                android:textStyle="bold" 
                android:padding="0dp"
            />
            <Button
                android:id="@+id/button_send_synth_1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="S"
                android:textSize="24px"
                android:textStyle="bold" 
                android:padding="0dp"
            />
        </LinearLayout>
        <ListView
            android:id="@+id/list_view_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toRightOf ="@id/linear_layout_fader_1"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
        />
        <ListView
            android:id="@+id/list_view_truck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf ="@id/linear_layout_fader_1"
            android:layout_below="@id/list_view_title"
            android:layout_weight="1"
        />
    </RelativeLayout>
</RelativeLayout>