<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/background_material_dark">
    <Button
        android:id="@+id/loadSoundFontButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SoundFont"
        android:textSize="26px" 
    />
    <Button
        android:id="@+id/loadMidiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MidiFile"
        android:textSize="26px"
        android:layout_toRightOf="@id/loadSoundFontButton"
    />
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="26px"
        android:layout_toRightOf="@id/loadMidiButton"
     />
    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:textSize="26px"
        android:layout_toRightOf="@id/startButton"
     />
    <Button
        android:id="@+id/addPlaylistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Playlist"
        android:textSize="26px"
        android:layout_toRightOf="@id/stopButton"
     />
    <Button
        android:id="@+id/deletePlaylistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Playlist"
        android:textSize="26px"
        android:layout_toRightOf="@id/addPlaylistButton"
     />
</RelativeLayout>